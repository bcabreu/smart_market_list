rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, create, update: if isSignedIn();
      allow delete: if isSignedIn() && isOwner(userId);
      
      // Store custom items history/suggestions
      match /custom_items/{itemId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }

    // --- Invitations Collection ---
    // Anyone signed in can create an invite (Owner)
    // Users can read invites sent to their email (Guest)
    match /invitations/{inviteId} {
      allow read, write: if isSignedIn();
    }

    // --- Families Collection ---
    // Contains the shared shopping lists
    match /families/{familyId} {
      allow read, write: if isSignedIn();
      
      // Subcollection: Shopping Lists
      match /shopping_lists/{listId} {
        allow read, write: if isSignedIn();
      }
      
      match /shopping_notes/{noteId} {
        allow read, write: if isSignedIn();
      }

      match /favorite_recipes/{recipeId} {
        allow read, write: if isSignedIn();
      }
    }

    // --- Collection Group: shopping_lists ---
    // Necessary for querying across all families where user is a member
    match /{path=**}/shopping_lists/{listId} {
      allow read, write: if isSignedIn();
    }
  }
}
